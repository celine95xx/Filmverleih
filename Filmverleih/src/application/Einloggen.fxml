<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="300.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.LogIn">
   <children>
      <Button layoutX="100.0" layoutY="199.0" mnemonicParsing="false" onAction="#logIn" text="Anmelden">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <TextField fx:id="txtUserName" layoutX="55.0" layoutY="95.0" promptText="Benutzername">
         <font>
            <Font size="14.0" />
         </font>
      </TextField>
      <PasswordField fx:id="txtPassword" layoutX="55.0" layoutY="135.0" promptText="Passwort">
         <font>
            <Font size="14.0" />
         </font>
      </PasswordField>
      <Label fx:id="lblAnmeldestatus" layoutX="45.0" layoutY="52.0" prefHeight="17.0" prefWidth="195.0" text="Anmeldestatus">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <Label layoutX="348.0" layoutY="54.0" text="Du hast noch keinen Account?" />
      <Label layoutX="348.0" layoutY="72.0" text="Dann registriere dich jetzt kostenlos! ^^" />
      <Button layoutX="403.0" layoutY="138.0" mnemonicParsing="false" onAction="#openRegistrationScene" text="Jetzt registrieren" textFill="#0b16a4" />
      <Label fx:id="lblLogInInformation" layoutX="76.0" layoutY="239.0" text="Benutzer nicht registriert." textFill="RED" visible="false" />
   </children>
</AnchorPane>
